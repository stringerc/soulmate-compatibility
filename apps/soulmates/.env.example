# Soulmates Frontend Environment Variables
# Copy this file to .env.local and update with your values

# API Configuration
# Set to FastAPI backend URL (development or production)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Use FastAPI backend directly in development
# Set to "true" to use FastAPI at localhost:8000
# Set to "false" or unset to use Next.js API routes (proxy)
NEXT_PUBLIC_USE_FASTAPI=true

# Phase Configuration
# 0 = MVP (Solo Self-Discovery)
# 1 = Phase 1 (Compatibility Explorer)
# 2 = Phase 2 (Couple Mode)
# 3 = Phase 3 (Resonance Lab)
SOULMATES_PHASE=3
NEXT_PUBLIC_SOULMATES_PHASE=3

# Analytics (Optional)
# NEXT_PUBLIC_POSTHOG_KEY=ph_...
# NEXT_PUBLIC_MIXPANEL_TOKEN=...

# Auth (Optional - if using Auth0)
# NEXT_PUBLIC_USE_AUTH0=false
# NEXT_PUBLIC_AUTH0_DOMAIN=...
# NEXT_PUBLIC_AUTH0_CLIENT_ID=...
